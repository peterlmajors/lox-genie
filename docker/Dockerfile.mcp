FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY requirements/requirements-api.txt requirements/requirements-mcp.txt ./
RUN pip install --no-cache-dir -r requirements-api.txt -r requirements-mcp.txt

# Copy application code
COPY . .

# Expose port
EXPOSE 8001

# Run the MCP server
CMD ["python", "services/mcp/main.py"]
